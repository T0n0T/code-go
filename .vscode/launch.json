    "version": "0.2.0",
    "configurations": [
        {
            "name": "go调试",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "asRoot": true,
            // "args": [
            //     "config",
            //     "--sta"
            // ],
            "program": "${fileDirname}"
        },
        {
            "name": "go: 交叉编译",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "preLaunchTask": "go:linux交叉编译"
        },
        {
            "type": "by-gdb",
            "request": "launch",
            "name": "gdb-remote",
            "program": "${workspaceRoot}/utils/main/test",
            "cwd": "${workspaceRoot}",
            "debuggerPath": "arm-linux-gnueabihf-gdb",
            "defaultStringCharset": "utf-8",
            "remote": {
                "enabled": true,
                "address": "192.168.1.101:2345",
                "mode": "remote",
                "execfile": "test"
            }
        },
        {
            "name": "root-debug-remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "apiVersion": 2,
            "stopOnEntry": true,
            "asRoot": true,
            "remotePath": "${file}",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "verbose"
        }
    ]
}