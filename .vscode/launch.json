    "version": "0.2.0",
    "configurations": [
        {
            "name": "gin-gorm-study",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/gin-gorm-study/"
        },
        {
            "name": "gin-project",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/gin-test-project/"
        },
        {
            "name": "go单文件调试",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}"
        },
        {
            "name": "go: 交叉编译",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "preLaunchTask": "go:linux交叉编译"
        },
        {
            "name": "gdb-arm",
            "type": "cppdbg",
            "request": "launch",
            "program": "${file}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "internalConsoleOptions": "neverOpen",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "arm-linux-gnueabihf-gdb",
            "miDebuggerServerAddress": "192.168.1.101:12345", //remote gdb with gdbserver
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            //"preLaunchTask": "Compile"
        },
        {
            "type": "by-gdb",
            "request": "launch",
            "name": "gdb-remote",
            "program": "${workspaceRoot}/utils/main/test",
            "cwd": "${workspaceRoot}",
            "debuggerPath": "arm-linux-gnueabihf-gdb",
            "defaultStringCharset": "utf-8",
            "remote": {
                "enabled": true,
                "address": "192.168.1.10:2345",
                "mode": "remote",
                "execfile": "test"
            }
        },
    ]
}