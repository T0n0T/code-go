{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "linux环境变量设置",
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "command": "export",
      "args": [
        "CGO_ENABLED=0",
        "GOOS=linux",
        "GOARCH=arm64"
      ]
    },
    {
      "label": "go:交叉编译",
      "type": "shell",
      "options": {
        "cwd": "${fileDirname}"
      },
      "command": "go",
      "args": [
        "build",
        "-o",
        "${workspaceFolder}/build/",
      ],
      "dependsOn": "linux环境变量设置"
    },
    {
      "label": "echo",
      "type": "shell",
      "command": "go env",
      "dependsOn": "环境变量设置"
    }
  ]
}